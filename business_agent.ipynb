# =========================
# 1) Imports + Load .env
# =========================
import os
import json
import time
import re
from dotenv import load_dotenv
from pypdf import PdfReader
import google.generativeai as genai
import gradio as gr

load_dotenv()  # reads .env locally

GEMINI_API_KEY = os.getenv("GEMINI_API_KEY")
if not GEMINI_API_KEY:
    raise ValueError("Missing GEMINI_API_KEY. Create a .env file with GEMINI_API_KEY=...")

genai.configure(api_key=GEMINI_API_KEY)

# =========================
# 2) Read business files
# =========================
def read_pdf(path):
    reader = PdfReader(path)
    text = ""
    for page in reader.pages:
        text += page.extract_text() or ""
    return text

SUMMARY_PATH = "me/business_summary.txt"
PDF_PATH = "me/about_business.pdf"

summary_text = open(SUMMARY_PATH, "r", encoding="utf-8").read()
pdf_text = read_pdf(PDF_PATH)

# =========================
# 3) Tools (required)
# =========================
def record_customer_interest(email, name, message):
    lead = {
        "time": time.time(),
        "email": email,
        "name": name,
        "message": message
    }
    with open("leads.jsonl", "a", encoding="utf-8") as f:
        f.write(json.dumps(lead, ensure_ascii=False) + "\n")
    return {"status": "ok", "saved": lead}

def record_feedback(question):
    fb = {
        "time": time.time(),
        "question": question
    }
    with open("feedback.jsonl", "a", encoding="utf-8") as f:
        f.write(json.dumps(fb, ensure_ascii=False) + "\n")
    return {"status": "ok", "saved": fb}

tools = [
    {
        "name": "record_customer_interest",
        "description": "Save a lead when the user provides name + email + what they want.",
        "parameters": {
            "type": "object",
            "properties": {
                "email": {"type": "string"},
                "name": {"type": "string"},
                "message": {"type": "string"}
            },
            "required": ["email", "name", "message"]
        }
    },
    {
        "name": "record_feedback",
        "description": "Save an unanswered question as feedback when you cannot answer from the business info.",
        "parameters": {
            "type": "object",
            "properties": {
                "question": {"type": "string"}
            },
            "required": ["question"]
        }
    }
]

# =========================
# 4) System prompt (required)
# =========================
system_prompt = f"""
You are the official assistant for StudyMate AI (a fictional business).
Stay in character.

Use ONLY the information in the Business Summary and PDF to answer business questions.
If the user asks something unrelated OR the info is not in the summary/PDF, call record_feedback(question).

If the user seems interested in joining/buying, encourage them to share their email and name.
If they provide email + name + what they need, call record_customer_interest(email,name,message).

Business Summary:
{summary_text}

Business PDF Content:
{pdf_text}
""".strip()

# =========================
# 5) Gemini chat function (tools)
# =========================
model = genai.GenerativeModel(
    model_name="gemini-1.5-flash",
    tools=tools,
    system_instruction=system_prompt
)

# helper: detect email quickly
email_regex = re.compile(r"[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}")

def chat_bot(user_message, history):
    # Build chat history for Gemini
    # history format from gradio: list of [user, bot]
    messages = []
    for u, b in history:
        messages.append({"role": "user", "parts": [u]})
        messages.append({"role": "model", "parts": [b]})

    chat = model.start_chat(history=messages)

    response = chat.send_message(user_message)

    # If Gemini calls tools, handle them
    if hasattr(response, "candidates") and response.candidates:
        cand = response.candidates[0]
        if cand.content and cand.content.parts:
            for part in cand.content.parts:
                if getattr(part, "function_call", None):
                    fc = part.function_call
                    name = fc.name
                    args = dict(fc.args)

                    if name == "record_customer_interest":
                        tool_result = record_customer_interest(
                            email=args["email"],
                            name=args["name"],
                            message=args["message"]
                        )
                    elif name == "record_feedback":
                        tool_result = record_feedback(args["question"])
                    else:
                        tool_result = {"status": "error", "message": "Unknown tool"}

                    # Send tool result back to Gemini to continue
                    followup = chat.send_message(
                        genai.protos.Part(
                            function_response=genai.protos.FunctionResponse(
                                name=name,
                                response=tool_result
                            )
                        )
                    )
                    return followup.text

    return response.text

# =========================
# 6) Gradio interface (required)
# =========================
gr.ChatInterface(chat_bot, title="StudyMate AI - Business Agent").launch(share=True)
